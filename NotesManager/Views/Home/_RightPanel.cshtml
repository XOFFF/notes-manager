@model NotesManager.Models.Note

@if (Model == null)
{
	<div class="text-muted">Select a note or create a new one.</div>
}
else
{
	<div class="right-panel @(Model != null ? "note-open" : "")">
		<form method="post" asp-action="CreateEditNoteForm" asp-controller="Home">
			<input type="hidden" name="Id" value="@Model.Id" />

			<div class="d-flex justify-content-between align-items-center mb-1">
				<div>
					@if (Model.Id != 0)
					{
						<small class="text-muted mb-2">@Model.CreatedAd.ToString("g")</small>
					}
					<input type="text" name="Title" value="@Model.Title" class="form-control mb-1" placeholder="Title" />
				</div>

				@if (Model.Id != 0)
				{
					<a asp-action="DeleteNote" asp-route-id="@Model.Id" class="btn btn-danger" asp-controller="Home">Delete</a>
				}

			</div>

			<div class="mb-3">
				<textarea name="Content" class="form-control" rows="15" placeholder="Content">@(Model.Content ?? "")</textarea>
			</div>

			<button type="submit" name="value" value="save" class="btn btn-success">Save</button>
		</form>
	</div>
}
